{
  "name": "nestjs-monolithic-template",
  "version": "1.0.0",
  "description": "template for medium to large scale monolithic nestjs appplication",
  "author": "nutchapon.han@dev.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.config.ts --setupFiles dotenv/config",
    "test:watch": "jest --config ./jest.config.ts --watch",
    "test:cov": "jest --config ./jest.config.ts --coverage",
    "typeorm": "ts-node --project ./tsconfig.json ./node_modules/typeorm/cli",
    "app:migrate-generate": "yarn typeorm migration:generate -d src/infra/persistence/typeorm/config/typeorm.ts src/infra/persistence/typeorm/migrations/app-migrate",
    "app:migrate-create": "yarn typeorm migration:create src/infra/persistence/typeorm/migrations/app-migrate",
    "app:migrate-run": "yarn typeorm migration:run -d src/infra/persistence/typeorm/config/typeorm.ts",
    "test:migrate-run": "dotenv -e .env.test -- yarn typeorm migration:run -d src/infra/persistence/typeorm/config/typeorm.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "module-alias": "^2.2.3",
    "oxide.ts": "^1.1.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "_moduleAliases": {
    "@core": "src/core",
    "@application": "src/application",
    "@infra": "src/infra",
    "@test": "src/test",
    "@usecase": "src/usecase",
    "@src": "src"
  }
}
